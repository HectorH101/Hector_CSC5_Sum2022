//System Libraries
#include <iostream>
using namespace std;

//User Libraries

//Global Constants - Math/Physics Constants, Conversions,
//                   2-D Array Dimensions

//Function Prototypes
int fctrl(int n)    //Function to write for this problem
{
    int fact=1;
    for(int i=1;i<=n;i++){
        fact*=i;
    }
    return fact;
}
//Execution Begins Here
int main(int argc, char** argv) {
    //Declare Variables
    int num;
    
    //Initialize Variables
    
    //Process/Map inputs to outputs
    cout<<"This program calculates the factorial using a function prototype found in the template for this problem."<<endl;
    cout<<"Input the number for the function."<<endl;
    cin>>num;
    cout<<num<<"! = "<<fctrl(num);
    
    //Output data
    
    //Exit stage right!
    return 0;
}
