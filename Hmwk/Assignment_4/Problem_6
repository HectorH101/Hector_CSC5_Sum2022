 cout<<fixed<<setprecision(2)<<showpoint;
 cout<<"miles per gallon:"<<endl;
 cout<<mpg<<endl;
 
 cout<<"Again:"<<endl;
 cin>>choice;
        if(choice=='y')cout<<endl;
    }while(choice=='y');
    
