    char choice;
    short nLitrs, mlsTrvl;
    float mpg;
    
    //Initialize or input i.e. set variable values
    
    //Map inputs -> outputs
    
    do{
        
    cout<<"Enter number of liters of gasoline:"<<endl<<endl;
    cin>>nLitrs;
    cout<<"Enter number of miles traveled:"<<endl<<endl;
    cin>>mlsTrvl;
    
   mpg=mlsTrvl/0.264179/nLitrs;

    
